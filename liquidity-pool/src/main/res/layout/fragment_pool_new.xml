<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trade_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:background="#4FC3F7"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="20dp">

            <Spinner
                android:id="@+id/pool_dropdown"
                android:layout_width="206dp"
                android:layout_height="48dp"
                android:entries="@array/pool_options"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/first_token"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bitcoin"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/first_token_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/second_token"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/euro_token"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/second_token_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30000"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/traded_amount"
                    android:layout_width="171dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:digits="0123456789."
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="numberDecimal" />

                <Spinner
                    android:id="@+id/traden_amount_token"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="0.5"
                    android:entries="@array/pool_tokens" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="109dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                app:srcCompat="@drawable/ic_action_cached" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/traded_amount_converted"
                    android:layout_width="144dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="17728"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/traded_amount_converted_token"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/euro_token"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="64dp"
                android:background="@color/blue"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Convert Tokens"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
